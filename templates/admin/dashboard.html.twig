{% extends '@EasyAdmin/layout.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}

    <div class="container">
        <h1>Bienvenue sur le tableau de bord</h1>

        <h2>Derniers utilisateurs inscrits</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Date d'inscription</th>
                </tr>
            </thead>
            <tbody>
                {% for user in recentUsers %}
                    <tr>
                        <td>{{ user.firstName }} {{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.createdAt|date('Y-m-d H:i') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h2>Derniers emails envoyés</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Destinataire</th>
                    <th>Sujet</th>
                    <th>Date d'envoi</th>
                    <th>Contenu</th>
                </tr>
            </thead>
            <tbody>
                {% for email in recentEmails %}
                    <tr>
                        <td>{{ email.recipient }}</td>
                        <td>{{ email.subject }}</td>
                        <td>{{ email.sentAt|date('Y-m-d H:i') }}</td>
                        <td>{{ email.content|slice(0, 50) }}...</td>  {# Affiche les 50 premiers caractères du contenu #}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun email envoyé trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
