{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <h1>Créer un compte</h1>

    {# Messages flash de succès ou d'erreur #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {# Formulaire d'inscription #}
    <form method="post">
        {{ form_start(form) }}
        
        {{ form_row(form.email) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.phone) }}
        
        {# Affichage du champ mot de passe (si c'est bien ce que tu utilises dans RegistrationType) #}
        {{ form_row(form.plainPassword) }}

        {# Bouton de soumission #}
        <button type="submit" class="btn btn-primary">S'inscrire</button>

        {{ form_end(form) }}
    </form>

    <p>Vous avez déjà un compte ? <a href="{{ path('app_connexion') }}">Se connecter</a></p>

    <p>
        <a href="{{ path('app_home') }}">Retour à l'accueil</a>
    </p>
{% endblock %}





