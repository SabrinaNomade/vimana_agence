{# templates/pages/auth/register.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {# Affichage des messages flash si l'inscription échoue ou réussit #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {# Formulaire d'inscription #}
    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.firstName, 'Prénom :') }}
        {{ form_widget(form.firstName, { 'attr': {'placeholder': 'Votre prénom', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.lastName, 'Nom :') }}
        {{ form_widget(form.lastName, { 'attr': {'placeholder': 'Votre nom', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.email, 'E-mail :') }}
        {{ form_widget(form.email, { 'attr': {'placeholder': 'Votre e-mail', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.phone, 'Téléphone :') }}
        {{ form_widget(form.phone, { 'attr': {'placeholder': 'Votre téléphone', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.password, 'Mot de passe :') }}
        {{ form_widget(form.password, { 'attr': {'placeholder': 'Votre mot de passe', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.confirmPassword, 'Confirmer le mot de passe :') }}
        {{ form_widget(form.confirmPassword, { 'attr': {'placeholder': 'Confirmer votre mot de passe', 'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
    </div>

    {{ form_end(form) }}

    {# Lien vers la connexion si l'utilisateur a déjà un compte #}
    <div class="mt-3">
        <a href="{{ path('app_connexion') }}">Vous avez déjà un compte ? Connectez-vous.</a>
    </div>
{% endblock %}

